{
	"$schema": "https://biomejs.dev/schemas/1.1.0/schema.json",
	"files": {
		"ignore": ["node_modules/**/*", ".marz/**/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}
